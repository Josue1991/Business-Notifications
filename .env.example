# Server Configuration
PORT=3007
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/business_notificaciones
MONGODB_DB_NAME=business_notificaciones

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Socket.IO Configuration
SOCKET_IO_PATH=/socket.io
SOCKET_IO_CORS_ORIGIN=http://localhost:3000
SOCKET_IO_PING_TIMEOUT=60000
SOCKET_IO_PING_INTERVAL=25000

# Web Push Configuration (VAPID Keys)
# Generate with: npx web-push generate-vapid-keys
VAPID_PUBLIC_KEY=your-public-key
VAPID_PRIVATE_KEY=your-private-key
VAPID_SUBJECT=mailto:admin@businessapp.com

# Firebase Cloud Messaging (FCM) - Mobile Push
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY=your-private-key
FIREBASE_CLIENT_EMAIL=your-client-email

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=business-notificaciones
KAFKA_GROUP_ID=business-notificaciones-group
KAFKA_TOPIC_NOTIFICATIONS=business.notifications
KAFKA_TOPIC_LOGS=business.logs

# Queue Configuration
QUEUE_NOTIFICATION_NAME=notification-queue
QUEUE_MAX_RETRIES=3

# Security
API_KEY=your-api-key-here
JWT_SECRET=your-jwt-secret-here
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Notification Settings
NOTIFICATION_EXPIRY_DAYS=30
CLEANUP_INTERVAL_HOURS=24
MAX_NOTIFICATIONS_PER_USER=1000
